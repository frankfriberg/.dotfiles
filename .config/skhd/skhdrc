# fast focus desktop
alt + shift - 1 : yabai -m space --focus 1
alt + shift - 2 : yabai -m space --focus 2
alt + shift - 3 : yabai -m space --focus 3
alt + shift - 4 : yabai -m space --focus 4

# send window to desktop and follow focus
ctrl + shift - 1: yabai -m window --space  1; yabai -m space --focus 1
ctrl + shift - 2: yabai -m window --space  2; yabai -m space --focus 2
ctrl + shift - 3: yabai -m window --space  3; yabai -m space --focus 3
ctrl + shift - 4: yabai -m window --space  4; yabai -m space --focus 4

# send window to monitor and follow focus
alt + ctrl - 1: yabai -m window --display 1; yabai -m display --focus 1
alt + ctrl - 2: yabai -m window --display 2; yabai -m display --focus 2

# focus window
alt + shift - l : yabai -m window --focus east || yabai -m display --focus east 
alt + shift - h : yabai -m window --focus west || yabai -m display --focus west
alt + shift - k : yabai -m window --focus north
alt + shift - j : yabai -m window --focus south

# balance size of windows
alt + shift - 0x0A : yabai -m space --balance

# toggle window zoom
alt + shift - f : yabai -m window --toggle zoom-fullscreen
